@model GestionParcAuto.ViewModels.CreateExpertiseViewModel
@{
    ViewData["Title"] = "Ajout d'une expertise";
}
<h1>@ViewData["Title"]</h1>
<a class="mb-5" asp-action="Index">Retour à la liste</a>
<form class="d-flex flex-grow-1 flex-column justify-content-around" asp-action="Create" method="post">
    <div class="row mb-4">
        <div class="col-4">
            <div class="form-floating mb-3">
                <input asp-for="Date" class="form-control" aria-required="true" placeholder="Marque" />
                <label asp-for="Date"></label>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <select asp-for="VehicleId" class="selectpicker" asp-items="ViewBag.VehicleSelectList" data-live-search="true">
                <option value="@null">Véhicule</option>
            </select>
            <span asp-validation-for="VehicleId" class="text-danger"></span>
        </div>
        <div class="col-4">
            <select asp-for="UserId" class="selectpicker" asp-items="ViewBag.UserSelectList" data-live-search="true">
                <option value="@null">Employé</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <button id="createSubmit" type="submit" class="w-25 btn btn-lg btn-primary">Créer</button>
    </div>
</form>
@section Links {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/i18n/defaults-*.min.js"></script>

}