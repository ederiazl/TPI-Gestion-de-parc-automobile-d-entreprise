@model GestionParcAuto.ViewModels.EditExpertiseViewModel
@{
    ViewData["Title"] = "Modifier une expertise";
}
<h1>@ViewData["Title"]</h1>
<a class="mb-5" asp-action="Index">Retour à la liste</a>
<form asp-action="Edit" method="post">
    <input asp-for="Id" hidden />
    <div class="row mb-4">
        <div class="col-4">
            <div class="form-floating mb-3">
                <input asp-for="Date" class="form-control" aria-required="true" placeholder="Marque" />
                <label asp-for="Date"></label>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <select asp-for="VehicleId" class="selectpicker" asp-items="ViewBag.VehicleSelectList" data-live-search="true">
                <option value="@null">Véhicule</option>
            </select>
            <span asp-validation-for="VehicleId" class="text-danger"></span>
        </div>
        <div class="col-4">
            <select asp-for="UserId" class="selectpicker" asp-items="ViewBag.UserSelectList" data-live-search="true">
                <option value="@null">Employé</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-4">
            <div class="form-check mb-3">
                <input asp-for="Status" class="form-check-input" aria-required="true" placeholder="Marque" />
                <label asp-for="Status" class="form-check-label"></label>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-12">
            <div class="form-floating mb-3">
                <textarea asp-for="Note" class="form-control" aria-required="true" placeholder="Marque" style="height: 200px"></textarea>
                <label asp-for="Note"></label>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button id="editSubmit" type="submit" class="w-25 btn btn-lg btn-primary">Modifier</button>
    </div>
</form>
@section Links {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/i18n/defaults-*.min.js"></script>

}